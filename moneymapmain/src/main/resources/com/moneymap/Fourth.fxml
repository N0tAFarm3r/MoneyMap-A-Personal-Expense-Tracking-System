<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_LEFT" spacing="12.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.moneymap.FourthController">
    <children>
    
    <Label text="View Reports" styleClass="app-title" />

    <MenuButton text="Options" styleClass="menu-button" >
            <items>
                <MenuItem text="Main Menu" onAction="#switchToFirst" />
                <MenuItem text="Add Income" onAction="#onAddIncome" />
                <MenuItem text="Add Expense" onAction="#onAddExpense" />
                <MenuItem text="View Reports" onAction="#onViewReports" />
                <MenuItem text="Settings" onAction="#onSettings" />
            </items>
        </MenuButton>
        
    <Label fx:id="totalIncomeLabel" text="Total Income: $0.00" />
    <Label fx:id="totalExpenseLabel" text="Total Expenses: $0.00" />
    <Label fx:id="netLabel" text="Net: $0.00" />
    <Label fx:id="avgIncomeLabel" text="Average Income: $0.00" />
    <Label fx:id="avgExpenseLabel" text="Average Expense: $0.00" />

    <Button text="Export Reports" onAction="#exportReports" />
    </children>
    <padding>
        <Insets bottom="20.0" left="12.0" right="12.0" top="12.0" />
    </padding>     
</VBox>